<%= stylesheet_link_tag 'bootstrap.min' %>
<%= stylesheet_link_tag 'login' %>
<div class="container">
  <h1 class="text-center">sign up</h1>
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= form.label :fullname, "Full Name", class: "sr-only" %>
      <%= form.text_field :fullname, class: "form-control", placeholder: "Full Name", required: true, autofocus: true %>
    </p>

    <p>
      <%= form.label :email, "Email address", class: "sr-only" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Email address", required: true, autofocus: true %>
    </p>

    <p>
      <%= form.label :password, "Password", class: "sr-only" %>
      <%= form.password_field :password, placeholder: "Password", class: "form-control", required:true %>
    </p>

    <div class="actions">
      <%= form.submit "Register", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
