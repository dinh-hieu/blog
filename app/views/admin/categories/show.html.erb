<p id="notice"><%= notice %></p>
<header class="clearfix">
  <div class="col-xs-5 col-sm-3 col-md-3"><b>Category</b></div>
  <div class="col-xs-7 col-sm-9 col-md-9">
    <%= link_to "Create New Category",  new_admin_category_path, class: "btn btn-xs btn-primary pull-right", type: "button" %>
  </div>
</header>

<div class="content-inner">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th class="hidden-xs">Created</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @category.name %></td>
          <td class="hidden-xs"><%= @category.created_at.strftime("%d/%m/%Y") %></td>
          <th><%= link_to 'edit', edit_admin_category_path(@category), class: "btn btn-xs btn-warning" %> </th>
        </tr>
    </tbody>
  </table>
  <%= link_to 'Back', admin_categories_path %>
</div>
