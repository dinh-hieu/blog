<%= form_for [:admin, @user] do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="sr-only">Full Name</label>
    <%= form.text_field :fullname, class: "form-control", id: "fullname", placeholder: "Full Name" %>
  </div>

  <div class="form-group">
    <label class="sr-only">Email</label>
    <%= form.email_field :email, class: "form-control", id: "email", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <label class="sr-only">Avatar</label>
    <%= form.file_field :avatar %>
  </div>

  <div class="form-group">
    <label class="sr-only">Password</label>
    <%= form.password_field :password, class: "form-control", id: "password", placeholder: "Password" %>
  </div>

  <div class="clearfix">
    <%= form.submit :class=> "btn btn-primary pull-right"%>
  </div>
<% end %>
